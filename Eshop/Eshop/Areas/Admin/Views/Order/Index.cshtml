
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
	<div class="row">
		<div class="col-6">
			<h2 class="text-primary">Orders List</h2>
		</div>
		<div class="col-6 text-right">
			<a style="text-decoration:none" asp-controller="Order" asp-route-status="pending" asp-action="Index" class="btn btn-primary">Pending</a>
			<a style="text-decoration:none" asp-controller="Order" asp-route-status="approved" asp-action="Index" class="btn btn-primary">Approved</a>
			<a style="text-decoration:none" asp-controller="Order" asp-route-status="all" asp-action="Index" class="btn btn-primary">All</a>
		</div>
	</div>

	<br />
	<br />

	<table class="table table-striped table-bordered" id="tblData" style="width:100%">
		<thead>
			<tr>
				<th>Name</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Count</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts{
	<script src="~/js/order.js"></script>
}

